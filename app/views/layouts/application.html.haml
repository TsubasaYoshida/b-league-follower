    %header.border-bottom.mb-3
      %nav.navbar.py-0
        .container
          = link_to 'B.LEAGUE FOLLOWER', root_path, class: 'navbar-brand'
    = yield
    %footer.border-top.my-5.pt-2.text-center
      B.LEAGUE FOLLOWER
